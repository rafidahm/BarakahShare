// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  picture   String?
  department String?
  semester   String?
  whatsapp   String?
  role      String   @default("user") // admin | user
  createdAt DateTime @default(now())
  items     Item[]
  requests  Request[]
  wishPosts WishPost[]
  feedbacks Feedback[]
}

model Item {
  id          String   @id @default(uuid())
  name        String
  category    String
  condition   String
  type        String   // Donate | Lend
  status      String   @default("AVAILABLE") // AVAILABLE | CLAIMED | IN_USE | COMPLETED | RETURNED
  description String?
  imageUrl    String?
  contact     String
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  createdAt   DateTime @default(now())
  requests    Request[]
}

model Request {
  id         String    @id @default(uuid())
  status     String    @default("Pending") // Pending | Approved | Rejected | On Hold | In Use | Pending Return | Returned | Claimed
  userId     String
  itemId     String
  user       User      @relation(fields: [userId], references: [id])
  item       Item      @relation(fields: [itemId], references: [id])
  message    String?
  createdAt  DateTime  @default(now())
  approvedOn DateTime? // When the request was approved
  lentOn     DateTime? // When the item was handed over (for lending)
  returnedOn DateTime? // When the item was returned (for lending)
}

model WishPost {
  id        String   @id @default(uuid())
  itemName  String
  imageUrl  String?
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Feedback {
  id        String   @id @default(uuid())
  type      String   // Report | Feedback | Query
  message   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
